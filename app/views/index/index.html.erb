<p id="notice"><%= notice %></p>

<h1>Your Courses</h1>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Description</th>
    <th>Subjects</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @courses.each do |course| %>
    <tr>
      <td><%= link_to course.name, course %></td>
      <td><%= course.code %></td>
      <td><%= course.description %></td>
      <td><%= course.subjects.map {|x| x.name}.join "," %></td>
      <td><%= link_to 'Drop', "/unenroll/#{course.id}", method: "post", class: "btn btn-danger" %></td>
    </tr>
  <% end %>
  </tbody>
</table>


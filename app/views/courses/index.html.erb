
<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.code %></td>
        <td><%= course.description %></td>
        <td><%= course.subjects.map {|x| x.name}.join "," %></td>
        <td><%= link_to 'Show', course , class:"btn btn-outline-primary"%></td>
        <td><%= link_to 'Edit', edit_course_path(course) , class:"btn btn-outline-primary"%></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class:"btn btn-outline-primary" %>
